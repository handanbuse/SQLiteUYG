<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sqlite_btnekle"
                android:text="ekle"
                android:layout_marginTop="15dp"
                android:onClick="sqlite_btnclick"
                android:textSize="19sp"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sqlite_btngüncelle"
                android:text="güncelle"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="19sp"
                android:onClick="sqlite_btnclick"></Button>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sqlite_btnsil"
                android:text="sil"
                android:layout_marginTop="15dp"
                android:onClick="sqlite_btnclick"
                android:textSize="19sp"></Button>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sqlite_btntablosil"
                android:text="tablo sil"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="19sp"
                android:onClick="sqlite_btnclick"></Button>



        </LinearLayout>




    </LinearLayout>



</RelativeLayout>